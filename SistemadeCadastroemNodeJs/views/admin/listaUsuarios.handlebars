<h2>Usuarios Cadastrados</h2>
<hr>
<a href="/admin/addUsuarios" ><button class="btn btn-success">Cadastrar</button></a>
<a href="/admin" ><button class="btn btn-primary">Voltar</button></a>

{{#each usuario}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>EMAIL: {{email}}</small> <br>
            <small>Criação: {{date}}</small><br>
            <input type="hidden" value="{{_id}}" name="id">
            <div class="mt-4">
                <a href="/admin/editarUsuarios/{{_id}}"><button class="btn btn-success">Editar</button></a>
                <a href="/admin/deletarUsuario/{{_id}}"><button class="btn btn-danger">Deletar</button></a>
            </div> 
        </div>
    </div>
  
{{/each}}